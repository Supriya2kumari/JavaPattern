/* print 

      *
      **
      ***
      ****
 
 */
 

class HalfPyramid {
static void printtn(int num)
{
   //base case
   if(num == 0)
     return;
   System.out.print("* ");
   printn(num - 1);
}

static void pattern(int row, int i)
{
   if(row == 0)
      return;
   print(i);
   System.out.println();
   pattern(row -1, i + 1);
}
    public static void main(String[] args) {
       int row=4;
     
       pattern(row, 1);
        
    }
}
